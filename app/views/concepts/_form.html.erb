<%= simple_form_for(@concept) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>
    <%= f.association :language, as: :select, :label => 'Lenguage', label_method: :name %>

  </div>

  <div class="form-actions">
    <%= f.button :submit , {class: "btn btn-info"}%>
  </div>
<% end %>
