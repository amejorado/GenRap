<% if protect_against_forgery? %>
<script type='text/javascript'>
  //<![CDATA[
  window._auth_token_name = "#{request_forgery_protection_token}";
  window._auth_token = "#{form_authenticity_token}";
//]]>
</script>
<% end %>
<!-- <%= javascript_include_tag 'application' %> -->
<nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
	<div class="container">
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
				<span class="sr-only">Abrir men&uacute;</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<%= link_to("<img style='height:26px;' src='/assets/logo3_small.png' />".html_safe, root_path, {:class => "navbar-brand"}) %>
		</div>

		<!-- Collect the nav links, forms, and other content for toggling -->
		<div class="collapse navbar-collapse navbar-ex1-collapse">
			<% if session[:user_id].nil? %>

			<%= form_tag({:controller=>"sessions", :action => 'login'}, {:class => "navbar-form navbar-right"}) do %>
			<div class="form-group">
				<%= text_field_tag(:gusername, nil, {:placeholder => 'Usuario', :class => 'form-control'})%>
			</div>
			<div class="form-group">
				<%= password_field_tag(:gpassword, nil, {:placeholder => 'Contraseña', :class => 'form-control'})%>
			</div>
			<%= submit_tag("Iniciar Sesión", :class => "btn btn-default") %>

			<% end %>
			<% else %>
			<ul class="nav navbar-nav navbar-right">
				<!-- Student dropdown -->
				<% if check_student %>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Alumno <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Exámenes y Ejercicios", pending_path %></li>
						<li><%= link_to "Historial del Alumno", :controller => "stats", :action => "mystats" %></li>
						<li><%= link_to "Crear Ejercicios", :controller => "exam_definition", :action => "new" %></li>
						<li><%= link_to "Perfil de Usuario", @current_user %></li>
					</ul>
				</li>
				<li class="divider-vertical"></li>
				<% end %>
				<!-- Professor dropdown -->
				<% if check_prof %>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">Profesor <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Definir Examen", :controller => "exam_definition", :action => "new" %></li>
						<li><%= link_to " Ver Preguntas", :controller => :master_questions, :action => :index %></li>
						<li><%= link_to "Historial de Exámenes", :controller => "stats", :action => "profstats" %></li>
						<li><%= link_to "Grupos", :controller => :groups, :action => :index %></li>
					</ul>
				</li>
				<li class="divider-vertical"></li>
				<% end %>
				<!-- Admin dropdown -->
				<% if check_admin %>
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin <b class="caret"></b></a>
					<ul class="dropdown-menu">
						<li><%= link_to "Usuarios", :controller => :users, :action => :index %></li>
						<li><%= link_to "Grupos", :controller => :groups, :action => :index %></li>
						<li><%= link_to "Lenguajes", :controller => :languages, :action => :index %></li>
						<li><%= link_to "Conceptos", :controller => :concepts, :action => :index %></li>
						<li><%= link_to "SubConceptos", :controller => :sub_concepts, :action => :index %></li>
						<li><%= link_to "Definir Preguntas", :controller => :master_questions, :action => :new %></li>
					</ul>
				</li>
				<li class="divider"></li>
				<% end %>
				<!-- Log out -->

				<li><%= link_to("Cerrar Sesión", {:controller => :sessions, :action => :logout}, {:class => "btn btn-danger"}) %></li>
			</ul>
			<% end %>
		</div><!-- /.navbar-collapse -->
	</div>
</nav>
