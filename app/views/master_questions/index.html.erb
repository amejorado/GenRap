
<style type="text/css">
  h3{
    display: inline-block;
  }
  span#historial_ques a{
    font-weight: bold !important;;
    display: inline-block !important;;
    float: right !important;;
    color: #0088cc !important;;
  }
  span#historial_ques a:hover {
    color: #005580 !important;
    background: none !important;
  }


</style>

<h3>Preguntas Maestras</h3>

<span id="historial_ques"> <%= link_to 'Historial de Preguntas Borradas', {:action => "deleted_questions" }%> </span>

 
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Lenguaje</th>
      <th>Concepto</th>
      <th>Subconcepto</th>
      <th>Pregunta</th>
      <th style="width: 1px;"></th>
    </tr>
  </thead>
 
  <tbody>
  <% 
  @masterQuestions.each do |mq|
    if mq.borrado == 0
  %>
      <tr>
        <td><%=   mq.language.name %></td>
        <td><%=   mq.concept.name %></td>
        <td><%=   mq.sub_concept.name %></td>
        
        <td style="width:0;"><pre style="font-size: 11px; border: none; background: transparent;"><%=   mq.inquiry %></pre></td>
        <td style="width:0;">
          <%=   link_to 'Ver mÃ¡s', mq , {class: "btn btn-mini"} %> <br/><br/>
          <% if check_admin %>
          <%=   link_to 'Editar', edit_master_question_path(mq) , {class: "btn btn-mini"}  %> <br/> <br/>
          <%=   link_to 'Borrar', {:action => "deleteQuestion", :id => mq.id}, :class => "btn btn-mini"    %> <br/><br/>
          <% end %>
        </td>

      </tr>
    <% 
    end
  end
  %>
  </tbody>
</table>
 
<br />
 