<h3>Detalle de Pregunta</h3>

  <% if check_admin %>
  
  <%= link_to '<span class="gglyphicon glyphicon-pencil" style="margin-right: 5px;"></span>Editar Grupo'.html_safe, 
              edit_master_question_path(@master_question),
              :class => "btn btn-default btn-sm" %>
  <% end %>

  <% if check_prof %>

  <span style="display: inline-block;float:right;">
  <%= link_to '<span class="glyphicon glyphicon-arrow-left" style="margin-right: 5px;"></span>Ir a Grupos'.html_safe, 
              master_questions_path,
              :class => "btn btn-default btn-sm" %>
  </span>
  <% end %>




<hr>

<p>
  <span><h5>Lenguaje:</h5></span>
  <%= @master_question.language.name %>
</p>

<p>
  <span><h5>Concepto a evaluar:</h5></span>
  <%= @master_question.concept.name %>
</p>
 
<p>
  <span><h5>Subconcepto a evaluar:</h5></span>
  <%= @master_question.sub_concept.name %>
</p>
 
<p>
  <span><h5>Pregunta:</h5></span>
  <pre><%= @master_question.inquiry %></pre>
</p>

