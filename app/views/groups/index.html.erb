<h1>Grupos</h1>
 
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dueño</th>
      <th></th>
      <% if check_admin %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>
 
  <tbody>
  <% @groups.each do |group| %>
    <tr>
      <td><%= group.name %></td>
      <td><%= group.user.username %></td>
      <td><%= link_to 'Mostrar', group %></td>
      <% if check_admin %>
        <td><%= link_to 'Editar', edit_group_path(group) %></td>
        <td><%= link_to 'Borrar', group, :confirm => '¿Está seguro que quiere borrar este grupo?', :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
 
<br />
 
<% if check_admin %>
  <%= link_to 'Nuevo Grupo', new_group_path %>
<% end %>