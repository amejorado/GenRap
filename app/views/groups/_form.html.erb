<%= simple_form_for(@group, html: {multipart: true}) do |f| %>
	<fieldset>
		<!-- <legend>Registro de usuario</legend> -->

		<%= f.input :name, :label => 'Nombre del grupo' %>
		<%= f.association :user, as: :collection_select, :label => 'Profesores', label_method: :username, :collection => User.where("utype = ?", 1), :prompt => "Selecciona un profesor", :input_html => {:name => "profesor"} %>
		<%= f.association :users, as: :check_boxes, :label => 'Alumnos', label_method: :username, :collection => User.where("utype = ?", 0)%>
		
		<%= file_field_tag 'upload' %></p>

		<div class="control-group">
			<div class="controls">
				<%= f.button :submit %>
			</div>
		</div>
	</fieldset>
<% end %>