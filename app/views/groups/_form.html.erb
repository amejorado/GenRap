<%= simple_form_for(@group, html: { multipart: true }) do |f| %>
  <fieldset>
    <%= f.input :name, label: 'Nombre del grupo' %>

    <%= f.association :user, label: 'Profesores', label_method: :username, collection: User.professors, prompt: "Selecciona un profesor" %>
    <%= f.association :users, as: :check_boxes, label: 'Alumnos', label_method: :username, collection: User.students %>

    <%= file_field_tag 'upload' %>

    <div class="control-group">
      <div class="controls">
        <%= f.button :submit, "Actualizar Grupo", class: "btn btn-primary" %>
        <%= link_to 'Cancelar', groups_path, class: "btn btn-danger" %>
      </div>
    </div>
  </fieldset>
<% end %>
